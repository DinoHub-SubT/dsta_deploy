<?xml version="1.0" encoding="utf-8" ?>
<launch>

  <!-- computer examples: ugv1, ugv2, uav1, etc. -->
  <arg name="computer" default="ugv1" />

  <!-- objdet (vision) launch -->
  <include file="$(find inference)/launch/$(env ugv1_inference).launch" />
  <include file="$(find modules)/launch/$(env ugv1_modules).launch" />

  <!-- objdet (bluetooth) launch -->
  <group if="$(arg ugv1_has_bluetooth)">
    <include file="$(find bluetooth_detection)/launch/$(env mk_1_xavier).launch" />
  </group>

  <!-- rosbag record launch -->
  <node name="record_obj_data" pkg="modules" type="record_objdet_data.sh" />

</launch>