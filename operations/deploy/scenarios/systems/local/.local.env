# //////////////////////////////////////////////////////////////////////////////
# Declare docker-compose host IPs for 'Azure' configuration
# - setup default IPs
# - only set those that are needed, keep missing IPs as the default values
# //////////////////////////////////////////////////////////////////////////////

# //////////////////////////////////////////////////////////////////////////////
# == Basestation ==
# //////////////////////////////////////////////////////////////////////////////

# export BASESTATION_IP="127.0.0.1"
export BASESTATION_IP="10.3.1.1"
export BASESTATION_HOSTNAME="basestation"
export BASESTATION_GPU_ENABLE_TYPE="non-gpu"

# //////////////////////////////////////////////////////////////////////////////
# == Perception  ==
# //////////////////////////////////////////////////////////////////////////////

export PERCEPTION_IP="127.0.0.1"
export PERCEPTION_HOSTNAME="perception"

# //////////////////////////////////////////////////////////////////////////////
# == UGV (external) ==
# //////////////////////////////////////////////////////////////////////////////

# UGV1
export UGV1_IP="10.3.1.11"
export UGV1_HOSTNAME="ugv1"

# UGV2
export UGV2_IP="10.3.1.12"
export UGV2_HOSTNAME="ugv2"

# UGV3
export UGV3_IP="10.3.1.13"
export UGV3_HOSTNAME="ugv3"

# //////////////////////////////////////////////////////////////////////////////
# == UAV (external) ==
# //////////////////////////////////////////////////////////////////////////////

# UAV1
export UAV1_IP="10.3.1.51"
export UAV1_HOSTNAME="uav1"

# UAV2
export UAV2_IP="10.3.1.52"
export UAV2_HOSTNAME="uav2"

# UAV3
export UAV3_IP="10.3.1.53"
export UAV3_HOSTNAME="uav3"

# UAV4
export UAV4_IP="10.3.1.54"
export UAV4_HOSTNAME="uav4"

# //////////////////////////////////////////////////////////////////////////////
# Other Shared Configurations
# //////////////////////////////////////////////////////////////////////////////

# docker compose base service type
export DOCKER_COMPOSE_BASE_SERVICE="local"

# export host type, for robots/*env files to read from
export DEPLOY_SYSTEM_TYPE="local"

# Setup to enable nvidia gpu passthrough
export GPU_ENABLE_TYPE="non-gpu"

# Default uav source workspace
export UAV_WS_SOURCE="/home/developer/deploy_ws/devel/uav/launch/setup.bash"

# docker image registries
export AZURE_REGISTRY="subtexplore.azurecr.io"
